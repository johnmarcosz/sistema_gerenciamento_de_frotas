<div class="container-xl">
    <div class="table-responsive">

        <div class="table-wrapper" style="max-width: 600px; margin: auto;">

            <div class="table-title">
                <div class="row">
                    <div class="col-mb-3">
                        <h4>Editar Usuarios</h4>
                    </div>
                </div>
            </div>

            <form action="/usuario/editarPost" method="post">
                    <input type="hidden" name="id" value="{{usuario.id}}">

                <div class="form-control">


                    <div class="mb-3">
                        <label for="username" class="form-label">Usuario</label>
                        <input type="text" class="form-control" name="username" value = "{{usuario.username}}">
                    </div>

                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="text" class="form-control" name="senha" placeholder="Senha" >
                    </div>

                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" class="form-control" name="nome"  value = "{{usuario.nome}}">
                    </div>

                    <div class="mb-3">
                        <label for="sobrenome" class="form-label">Sobrenome</label>
                        <input type="text" class="form-control" name="sobrenome"  value = "{{usuario.sobrenome}}">
                    </div>
                      <div class="mb-3">
                        <label for="sobrenome" class="form-label">E-mail</label>
                        <input type="text" class="form-control" name="email"  value = "{{usuario.email}}">
                    </div>
                    <center>
                        <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill"></i>
                            Salvar</button>
                        <a href="/usuario" class="btn btn-danger"><i class="bi bi-x-circle-fill"></i> Cancelar</a>
                    </center>

                </div>

            </form>

        </div>

    </div>
</div>