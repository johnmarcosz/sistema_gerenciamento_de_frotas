<title>Veículo | Editar</title>

<div class="container-x1 px-4 h-100">

    <form action="/veiculo/editarPost" method="POST">
    <input type="hidden" name="id" value={{veiculo.id}}>

        <div class="col-mb-3">
            <h4>Editar Veículo</h4>
        </div>

        <hr>

        <div class="form-row row">

            <div class="form-group col mb-3">
                <label for="tipo" class="form-label">Tipo</label>
                <input type="text" class="form-control" name="tipo" placeholder="Ex.: Carro, Van, Ônibus..." value={{veiculo.tipo}} required>
            </div>

            <div class="form-group col mb-3">
                <label for="descricao" class="form-label">Descrição *</label>
                <input type="text" class="form-control" name="descricao" placeholder="Ex.: 7243" value={{veiculo.descricao}} required>
            </div>

            <div class="form-group col mb-3">
                <label for="placa" class="form-label">Placa *</label>
                <input type="text" class="form-control" name="placa" placeholder="Ex.: ABC1234" value={{veiculo.placa}} required>
            </div>

        </div>

        <div class="form-row row">

            <div class="form-group col mb-3">
                <label for="ano" class="form-label">Ano</label>
                <input type="text" class="form-control" name="ano" placeholder="Ex.: 2022" value={{veiculo.ano}}>
            </div>

            <div class="form-group col mb-3">
                <label for="capacidadePassageiros" class="form-label">Capacidade</label>
                <input type="number" step="1" class="form-control" name="capacidadePassageiros" placeholder="Ex: 46" value={{veiculo.capacidadePassageiros}}>
            </div>

        </div>

        <div class="form-row row">

            <div class="form-group col mb-3">
                <label for="numeroRenavam" class="form-label">Renavam</label>
                <input type="text" step="1" class="form-control" name="numeroRenavam" placeholder="Número do Renavam"
                    SIZE=11 MAXLENGTH=11 value={{veiculo.numeroRenavam}}>
            </div>

            <div class="form-group col mb-3">
                <label for="validadeInspecao" class="form-label">Validade Inspeção</label>
                <input type="date" step="0.01" class="form-control" name="validadeInspecao"
                    placeholder="Validade da inspeção" value={{veiculo.validadeInspecao}}>
            </div>

            <div class="form-group col mb-3">
                <label for="validadeApolice" class="form-label">Validade Apólice</label>
                <input type="date" step="0.01" class="form-control" name="validadeApolice"
                    placeholder="Validade do Apólice de Seguro" value={{veiculo.validadeApolice}}>
            </div>

        </div>

        <center class="mt-3">
            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill"></i>
                Salvar</button>
            <a href="/veiculo" class="btn btn-danger"><i class="bi bi-x-circle-fill"></i> Cancelar</a>
        </center>
    </form>
</div>