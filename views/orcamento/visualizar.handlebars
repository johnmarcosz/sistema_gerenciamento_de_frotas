<title>Orcamento | Cadastro</title>

<div class="container-x1 px-4 h-100">

    <form action="/orcamento/resultado" method="POST">

    <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h4>Orçamento #{{orcamento.id}} </h4>
                    </div>
                    <div class="col-sm-7">
                        <a href="/orcamento" class="btn btn-secondary"> <i class="bi bi-arrow-return-left"></i><span>
                        Voltar</span></a>
                    </div>
                </div>
            </div>

        <hr>

        <div class="form-row row">

            <div class="col">
                <label for="distanciaKm" class="form-label">Distância da viagem</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Km</div>
                    </div>
                    <input type="number" class="form-control" name="distanciaKm" step="0.01" value={{orcamento.distanciaKm}}
                        readonly>
                </div>
            </div>

            <div class="col">
                <label for="valorFinal" claSs="form-label">Valor Final</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    <input type="number" class="form-control" name="valorFinal"
                        step="0.01" value={{orcamento.valor}} readonly>
                </div>
            </div>

            <div class="col">
                <label for="valorKm" claSs="form-label">Valor Km Rodado</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    <input type="number" class="form-control" name="valorKm" step="0.01"
                       value={{orcamento.valorKm}}  readonly>
                </div>
            </div>

        </div>

        <div class="form-row row">

            <div class="col">
                <label for="custoFinal" claSs="form-label">Custo Total Estimado</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    <input type="number" step="0.01" class="form-control" name="custoFinal"
                        value={{orcamento.custoFinal}} readonly>
                </div>
            </div>

            <div class="col">
                <label for="lucroValor" class="form-label">Valor Lucro</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    <input type="number" class="form-control" name="lucroValor" value={{orcamento.lucroValor}}
                        step="0.01" readonly>
                </div>
            </div>

            <div class="col">
                <label for="lucroPercentual" claSs="form-label">Lucro Percentual</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">%</div>
                    </div>
                    <input type="number" class="form-control" name="lucroPercentual" value={{orcamento.lucroPercentual}}
                        step="1" readonly>
                </div>
            </div>
        </div>
    </form>
</div> 
