<title>Orcamento | Cadastro</title>

<div class="container-x1 px-4 h-100">

    <form action="/orcamento/resultado" method="POST">

        <div class="col-mb-3">
            <h4>Calcular Orçamento</h4>
        </div>

        <hr>

        <div class="form-row row">

            <div class="col">
                <label for="distanciaKm" class="form-label">Distância da viagem *</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Km</div>
                    </div>
                    <input type="number" class="form-control" name="distanciaKm" placeholder="Ex.: 500" step="0.01"
                        required>
                </div>
            </div>

            <div class="col">
                <label for="precoCombustivel" claSs="form-label">Valor do combustível *</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    <input type="number" class="form-control" name="precoCombustivel" placeholder="Ex.: 5.50"
                        step="0.01" required>
                </div>
            </div>

            <div class="col">
                <label for="consumo" claSs="form-label">Consumo do veículo *</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Km/L</div>
                    </div>
                    <input type="number" class="form-control" name="consumo" placeholder="Ex.: 3.50" step="0.01"
                        required>
                </div>
            </div>

        </div>

        <div class="form-row row">

            <div class="col">
                <label for="lucroPercentual" claSs="form-label">Percentul de lucro *</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">%</div>
                    </div>
                    <input type="number" step="0.01" class="form-control" name="lucroPercentual" placeholder="Ex.: 50"
                        required>
                </div>
            </div>

            <div class="col">
                <label for="custosExtras" class="form-label">Custos extra</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    <input type="number" class="form-control" name="custosExtras" placeholder="Ex.: 300,00" value="0" step="0.01">
                </div>
            </div>

            <div class="col">
                <label for="decrementoVeiculo" claSs="form-label">Percentual de decremento</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">%</div>
                    </div>
                    <input type="number" class="form-control" name="decrementoVeiculo" placeholder="Ex.: 20" value="20"
                        step="1.0">
                </div>
            </div>
        </div>

        <center class="mt-3">
            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill"></i>
                Calcular</button>
            <a href="/orcamento" class="btn btn-danger"><i class="bi bi-x-circle-fill"></i> Cancelar</a>
        </center>
    </form>
</div> 
